---
const { title, events } = Astro.props;
---
<div class="mb-12">
  <h2 class="text-3xl font-display font-bold text-gradient mb-6">{title}</h2>
  <div class="bg-secondary-900 rounded-lg p-6 border border-secondary-700">
    <div class="space-y-4">
      {events.map(event => (
        <div class="flex flex-col sm:flex-row justify-between items-center py-4 border-b border-secondary-700 last:border-b-0">
          <div class="mb-4 sm:mb-0">
            <h3 class="font-semibold text-white text-lg">{event.title}</h3>
            <p class="text-secondary-400">{event.venue}</p>
            {event.date && <p class="text-sm text-secondary-500">{event.date}</p>}
          </div>
          {event.url && (
            <a href={event.url} target="_blank" rel="noopener noreferrer" class="btn-primary text-sm">
              Tickets
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</div>
