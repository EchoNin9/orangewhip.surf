---
import Layout from '../../components/Layout.astro';
import { Header } from '../../components/react/Header';
import { Footer } from '../../components/react/Footer';
import EventList from '../../components/EventList.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const daily = await getCollection('daily');
  return daily.map(item => ({
    params: { date: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
const dailyDate = new Date(item.data.date);
const formattedDate = dailyDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`Vancouver Shows - ${formattedDate} â€” Orange Whip`} description={`Daily Vancouver music events roundup for ${formattedDate}`}>
  <Header client:load />

  <main class="container-max section-padding">
    <div class="max-w-4xl mx-auto">
      <!-- Back Link -->
      <div class="mb-8">
        <a href="/daily" class="text-primary-400 hover:text-primary-300 transition-colors duration-200">
          &larr; Back to Daily Roundups
        </a>
      </div>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-gradient mb-4">Vancouver Show Roundup</h1>
        <p class="text-xl text-secondary-300">{formattedDate}</p>
      </div>

      <!-- Today -->
      {item.data.today && item.data.today.length > 0 && (
        <EventList title="Today" events={item.data.today} />
      )}

      <!-- This Week -->
      {item.data.thisWeek && item.data.thisWeek.length > 0 && (
        <EventList title="This Week" events={item.data.thisWeek} />
      )}

      <!-- Next -->
      {item.data.next && item.data.next.length > 0 && (
        <EventList title="Next" events={item.data.next} />
      )}

      <!-- No Events Message -->
      {(!item.data.today || item.data.today.length === 0) && 
       (!item.data.thisWeek || item.data.thisWeek.length === 0) && 
       (!item.data.next || item.data.next.length === 0) && (
        <div class="text-center py-16">
          <p class="text-2xl text-secondary-300">No Vancouver events found for this date.</p>
          <p class="text-lg text-secondary-400 mt-2">Check back tomorrow for updated listings!</p>
        </div>
      )}
    </div>
  </main>

  <Footer client:load />
</Layout>
